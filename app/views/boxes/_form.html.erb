<%= form_for(@box, role: 'form', class: 'form') do |f| %>
  <% if @box.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@box.errors.count, "error") %> prohibited this box from being saved:</h2>

      <ul>
      <% @box.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :destination %><br>
    <%= f.text_field :destination, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><br>
    <%= f.number_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :items_list %><br>
    <%= f.text_area :items_list, value: @box.items_as_list, rows: 10, class: 'form-control' %>
  </div>
  <div class="form-group">
    <button type='submit' class='btn btn-lg btn-primary'>Save Box</button>
  </div>
<% end %>
