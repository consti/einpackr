<h1>Listing boxes</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Destination</th>
      <th>Weight</th>
      <th>Items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.id %></td>
        <td><%= box.destination %></td>
        <td><%= box.weight %></td>
        <td><%= box.items.map(&:name).join(", ") %></td>
        <td><%= link_to 'Show', box %></td>
        <td><%= link_to 'Edit', edit_box_path(box) %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Box', new_box_path %>
